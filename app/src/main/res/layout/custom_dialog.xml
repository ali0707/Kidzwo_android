<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kid">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="326dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/amita"
        android:text="Congratulation you unlocked the next level"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hello"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_margin="5dp"
        android:layout_marginBottom="302dp"
        android:layout_marginEnd="87dp"
        android:background="@android:color/holo_orange_light"
        android:fontFamily="@font/amita"
        android:text="Next level"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/close"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/close"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_gravity="center|right"
        android:layout_margin="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="101dp"
        android:background="@android:color/holo_orange_light"

        android:fontFamily="@font/amita"
        android:text="Continue"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/hello"
        app:layout_constraintEnd_toStartOf="@+id/hello"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>