<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/frenchL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="16dp"
        android:text="French"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/EnglishL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="English"
        app:layout_constraintStart_toStartOf="@+id/frenchL"
        app:layout_constraintTop_toBottomOf="@+id/frenchL" />

    <Button
        android:id="@+id/GermanL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="German"
        app:layout_constraintStart_toStartOf="@+id/EnglishL"
        app:layout_constraintTop_toBottomOf="@+id/EnglishL" />
</android.support.constraint.ConstraintLayout>