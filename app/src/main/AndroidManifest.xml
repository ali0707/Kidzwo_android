<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ghassen.finag">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Math"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MathNiveau"
            android:parentActivityName=".Math" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".French"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FrenchNiveau"
            android:parentActivityName=".French" />
        <activity
            android:name=".Qi"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QiNiveau"
            android:parentActivityName=".Qi" />
        <activity
            android:name=".Audio"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AudioNiveau"
            android:parentActivityName=".Audio" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr"/>

        <activity android:name=".BookPdf" />
        <activity
            android:name=".English"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EnglishNiveau"
            android:parentActivityName=".English" />
        <activity
            android:name=".Memory"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".CameraToText"></activity>
    </application>

</manifest>